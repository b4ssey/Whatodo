<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="#FBFBFB"
    android:layout_height="match_parent"
    tools:context=".ReadActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content"
        android:background="#3E7B41">

       <LinearLayout
           android:orientation="horizontal"
           android:layout_width="match_parent"
           android:layout_height="wrap_content">

           <LinearLayout
               android:layout_marginLeft="16dp"
               android:orientation="vertical"
               android:layout_width="250dp"
               android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/readtitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:text="@string/read_title"
                        android:textColor="#FFF"
                        android:textSize="32sp" />

                    <TextView
                        android:id="@+id/readsubtitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="@string/read_subtitle"
                        android:textColor="#E8F6CC"
                        android:textSize="18sp"
                        />

           </LinearLayout>

           <Button
               android:layout_width="52dp"
               android:layout_height="52dp"
               android:textAlignment="center"
               android:textColor="#FFF"
               android:textSize="38sp"
               android:text="+"
               android:background="@drawable/backgroundnewbutton"
               android:id="@+id/buttonaddnew"
               android:layout_marginTop="35dp"
               android:layout_marginLeft="20dp"
               />

       </LinearLayout>

        <View
            android:layout_marginTop="20dp"
            android:background="#9DCA45"
            android:layout_width="match_parent"
            android:layout_height="1dp">

        </View>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


            <ListView

                android:id="@+id/todoformat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp">

            </ListView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

    </LinearLayout>

</LinearLayout>